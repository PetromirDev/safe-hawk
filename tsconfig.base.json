{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
      "server/*.ts",
      "server/**/*.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "extension/**/*.ts",
      "extension/**/*.tsx",
      "extension/**/*.js",
      "extension/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
